<!-- Search in mobile mode-->
<section>
	<div class="mobile_search_div" id="mobile_search_div">
		<form id="mobilesearchform" method="POST">
			<div class="mobile_search-input-div">
				<input type="search" name="cityName" placeholder="Seach a city" required>
			</div>
		</form>
		
	</div>
</section>

<!-- Search in desktop mode-->
<section>
	<div class="city_search_form">
		<form class="search_form" method="POST" >
			<div class="search-input-div">
				<input type="search" name="cityName" placeholder="Seach a city" required>
			</div>
			<div class="search-div">
				<input type="submit" name="citySearchSubmitBtn" value="search">
			</div>
		</form>
	</div>

</section>

<!-- This should handle the map section-->
<iframe width="1000" style="width: 100%;height: 500px;"
 src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCRTQI9SAulzBkRB1-KDkDKn2Vq6XbFvPw&q=<%=lagosweather_data.lagoscity_Name %>,<%=lagosweather_data.lagoslocation_country %>" allowfullscreen></iframe>


<!-- im gonna include all the necessary details here -->
<div class="weather_details">
	<div class="city_name">
		<h4><li class="icon-pin_drop" style="font-size: 24px;margin-top: 10px;"></li><b><%=lagosweather_data.lagoscity_Name %>,<%=lagosweather_data.lagoslocation_country %></b></li></h4>
		<h6><script>
			date();
		</script></h6>
		<ul>
			<li><h6>Latitude:<b><%= lagosweather_data.lagos_lat %>&deg;</b></h6></li> 
			<li><h6>Longitude:<b><%= lagosweather_data.lagos_long %>&deg;</b></h6></li> 
		</ul>
	</div>

	<div class="temperature_div">

		<h2 style="margin-bottom: 20px;margin-top: 10px; font-size: 24px;height:auto ;display:flex;flex-direction: column;
		justify-content: center;text-align: center;align-items: center;"  >
			<img src="http://openweathermap.org/img/w/<%= lagosweather_data.lagoscloudId %>.png" width="50" height="50">
			   <%= lagosweather_data.lagoslocation_temp %>&deg;C</h2>
		<ul>
			<li><h6>Max. Temp:<b><%= lagosweather_data.lagostemp_max %>&deg;C</b></h6></li> 
			<li><h6>Min. Temp:<b><%= lagosweather_data.lagostemp_min %>&deg;C</b></h6></li> 
		</ul>
		

	<p><b> Feels like <%= lagosweather_data.lagostemp_feels_like %>&deg;C. <%= lagosweather_data.lagosweatherDesc %>.</b></p>

	<ul class="weather_list">
		<li  class="icon-soundcloud"><b>Wind Speed:</b><%= lagosweather_data.lagoswindspeed %>m/s E</li><br><br>
		<li class="icon-tachometer" ><b>Pressure:</b><%= lagosweather_data.lagoslocation_pressure %>hPa</li>
		<li ><b >Humidity:</b><%= lagosweather_data.lagoshumidity %>%</li>
		<li ><b >Dew point</b>:20&deg;C</li>
		<li ><b >Visibility: </b><%= lagosweather_data.lagosvisibility %>m</li>
	</ul>
		
	</div>
	


</div>

